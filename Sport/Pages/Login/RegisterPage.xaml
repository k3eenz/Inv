<Page x:Class="Sport.Pages.Login.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      Height="500" Width="404" Title="RegisterPage" >
    <Grid Background="#F5F5F5">
        <Border Background="White" CornerRadius="10" Margin="0,20,0,10" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid Margin="20,20,20,-1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Регистрация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />
                <TextBlock Grid.Row="1" Text="Логин" FontSize="14" Margin="0,0,0,5" />
                
                <TextBox Grid.Row="2" x:Name="LoginTextBox" FontSize="14" Padding="5" Margin="0,0,0,15" />
                <TextBlock Grid.Row="3" Text="Пароль" FontSize="14" Margin="0,0,0,5" />
                
                <PasswordBox Grid.Row="4" x:Name="PasswordBox" FontSize="14" Padding="5" Margin="0,0,0,15" />

                <TextBlock Grid.Row="5" Text="ФИО" FontSize="14" Margin="0,0,0,5" />
                <TextBox Grid.Row="6" x:Name="FullNameTextBox" FontSize="14" Padding="5" Margin="0,0,0,15" />

                <TextBlock Grid.Row="7" Text="Номер телефона" FontSize="14" Margin="0,0,0,5" />
                <TextBox Grid.Row="8" x:Name="PhoneNumberTextBox" FontSize="14" Padding="5" Margin="0,0,0,15" />

                <Button x:Name="RegisterBtn" Grid.Row="9" Content="Зарегистрироваться" FontSize="14" Height="40" Background="#4CAF50" Foreground="White" Padding="10" HorizontalAlignment="Center" Width="200" Margin="0,10,0,0" Click="RegisterBtn_Click"/>
                <TextBlock Grid.Row="10" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Run Text="Есть аккаунт?"/>
                    <Hyperlink NavigateUri="AuthPage.xaml">
                        Авторизация
                     </Hyperlink>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Page>